---
import type { Producto } from '../types/Producto';
const product = Astro.props.product as Producto;
---
<article class="shadow-md hover:shadow-xl rounded-lg overflow-hidden relative transition-shadow ">
  <figure class="relative group overflow-hidden">
    <img src=`/images/productos/${product.foto}` loading="lazy" decoding="async" class="h-96 w-full object-cover group-hover:scale-105 transition-transform duration-300" alt=`Imagen de ${product.nombre}`>
    <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-15 transition-opacity "></div>
    <span class="absolute bottom-8 left-5 font-nunito bg-pinky-dark font-bold text-white px-3 py-1 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-200">{product.categoria}</span>
  </figure>

  <div class="w-full h-[240px] p-4 relative ">
    <header>
      <h3 class="text-text-dark text-pretty font-bold font-caveat text-3xl">{product.nombre}</h3>
    </header>

    <p class="text-text-light text-lg mt-3">{product.descripcion}</p>

    <footer class="flex justify-between mt-5 absolute bottom-2">
        <span class="font-bold font-nunito text-pinky-dark relative text-xl">Desde ${product.precio.toFixed(2)} </span>
        <!--<button class="font-nunito text-pinky-regular px-2 py-1 relative rounded-full hover:bg-slate-100 cursor-pointer">Consultar</button>--> 
    </footer>
  </div>
</article>