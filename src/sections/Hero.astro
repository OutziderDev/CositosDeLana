import background from '../assets/background.svg';
---
<section class="bg-yellow-700/20 h-screen">
  <img id="background" src={background.src} alt="" fetchpriority="high" />
</section>

<style>
	#background {
		position: fixed;
		
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(50px);
	}
</style>  